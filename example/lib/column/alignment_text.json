{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "TextBlock",
      "text": "Alignment Text",
      "size": "ExtraLarge"
    },
    {
      "type": "ColumnSet",
      "spacing": "None",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "top:center",
              "horizontalAlignment": "Center"
            }
          ],
          "horizontalAlignment": "Center"
        },
        {
          "type": "Column",
          "width": "stretch",
          "verticalContentAlignment": "Center",
          "items": [
            {
              "type": "TextBlock",
              "text": "center:right",
              "horizontalAlignment": "Right"
            }
          ],
          "horizontalAlignment": "Right"
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "bottom:left"
            }
          ],
          "verticalContentAlignment": "Bottom"
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Image",
              "url": "http://adaptivecards.io/content/cats/1.png",
              "size": "Large"
            }
          ]
        }
      ]
    }
  ]
}